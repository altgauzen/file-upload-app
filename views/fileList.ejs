<!DOCTYPE html>
<html lang="en">
<head>
  <title>Files</title>
</head>
<body>
  <% if(message) { %>
    <p style="background-color: yellow"> <%= message %>  </p>  
  <% } %> 
  <form action="/upload" method="POST">
    <label>File:</label>
    <input
      name='fileName'
      type='file'
    />
    <input
      type='submit'
      value='Upload'
    />
  </form>

  <% if(allFiles) { %>
    <ul>
      <% allFiles.forEach(item => { %>
        <li>File: <%= item.fileName %>  </li>
      <% }) %> 
    </ul>
  <% } %> 
</body>
</html>